<h1><%= @director.name %></h1>

<div id="films">

  <% directed = @films.select do |film| %>
    <% film.director_id == @director.id %>
  <% end %>

  <% directed.each do |film|%>
  <%= film.title %><br>
  <% end %>

  <% total_sales = directed.inject(0) { |sum, film| sum + film.box_office_sales } %>

  <h4>Total box office sales: <%= total_sales %></h4>
</div>
